<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <conversionRule
        conversionWord="highlightex"
        converterClass="io.github.clamentos.grapher.auth.logging.ConsoleColorConverter"
    />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                [ %blue(%d{dd-MM-yyyy HH:mm:ss.SSS XXX}) ][ %highlightex(%-5p) ][ %magenta(%t) ][ %cyan(%logger{0}) ][ %m %ex]%n
            </pattern>
        </encoder>
    </appender>

    <appender name="ROLLER" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>./logs/authLogs.%d{yyyy-MM-dd_HH-mm}.log</fileNamePattern>
        </rollingPolicy>

        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS XXX}|%-5p|%t|%logger{0}|%m %ex|%n</pattern>
        </encoder>

    </appender>

    <!--
    <appender name="DB" class="io.github.clamentos.grapher.auth.logging.DatabaseAppender">

        <filePath>./logBuffer.log</filePath>
        <bufferSize>4096</bufferSize>
        <taskSleepAmount>2000</taskSleepAmount>

        <patternLayout class="ch.qos.logback.classic.PatternLayout">
            <pattern>
                %d{dd-MM-yyyy HH:mm:ss.SSS XXX}~%-5p~%t~%logger{0}~%m
            </pattern>
        </patternLayout>

    </appender> -->

    <root level="info">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ROLLER"/>
    </root>

</configuration>
